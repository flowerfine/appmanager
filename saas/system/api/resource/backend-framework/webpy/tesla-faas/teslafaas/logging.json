{
    "disable_existing_loggers": false,
    "formatters": {
        "fmt_default": {
            "format": "[%(asctime)s] [%(levelname)s] [%(threadName)s-%(process)d] [%(module)s.%(funcName)s:%(lineno)d] [%(trace_id)s] [%(user)s] %(message)s"
        }
    },
    "filters": {
        "trace_id_filter": {
            "()" : "teslafaas.common.log.log_filter.TraceIdFilter"
        }
    },
    "handlers": {
        "handler_console": {
            "class": "logging.StreamHandler",
            "formatter": "fmt_default",
            "filters": ["trace_id_filter"],
            "level": "DEBUG"
        },
        "handler_file": {
            "class": "cloghandler.ConcurrentRotatingFileHandler",
            "level": "INFO",
            "formatter": "fmt_default",
            "filters": ["trace_id_filter"],
            "filename": "~/logs/tesla-faas/server.log",
            "mode": "a",
            "maxBytes": 256857600,
            "encoding": "utf8",
            "backupCount": 20
        }
    },
    "loggers": {
        "": {
            "handlers": [
                "handler_console",
                "handler_file"
            ],
            "level": "DEBUG"
        }
    },
    "version": 1
}
